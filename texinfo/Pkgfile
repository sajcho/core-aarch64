# Description:	Contains programs for reading, writing, and converting info pages
# URL:		http://www.gnu.org/software/texinfo/
# Maintainer:	Unknown
# Depends on:	ncurses perl
# Modified:	Milan Buska, milan dot buska at gmail dot com

name=texinfo
version=6.7
release=2
source=(http://ftpmirror.gnu.org/gnu/$name/$name-$version.tar.xz \
	fix-build-without-NLS.patch)

build() {
	patch -d $SRC/$name-$version -p1 -i $SRC/fix-build-without-NLS.patch

	cd $name-$version

	./configure \
		--prefix=/usr \
		--disable-nls

	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/info
}

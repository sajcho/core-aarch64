# Description:	A tool for transfering files with URL syntax
# URL:		http://curl.haxx.se
# Maintainer:	CRUX System Team, core-ports at crux dot nu
# Depends on:	openssl zlib
# Modified:	Milan Buska, milan dot buska at gmail dot com

name=curl
version=7.70.0
release=1
source=(http://curl.haxx.se/download/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--enable-ipv6 \
		--enable-threaded-resolver \
		--disable-ldap \
		--disable-ldaps \
		--with-libidn2 \
		--with-ca-bundle=/etc/ssl/cert.pem \
		--without-cyassl \
		--without-gssapi \
		--without-librtmp \
		--without-libpsl

	make
	make DESTDIR=$PKG install
	make -C docs/libcurl DESTDIR=$PKG install
}

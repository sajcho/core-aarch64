# Description:	The GNU Binutils are a collection of binary tools
# URL:		http://sources.redhat.com/binutils/
# Maintainer:	CRUX System Team, core-ports at crux dot nu
# Depends on:	flex texinfo zlib
# Modified:	Milan Buska, milan dot buska at gmail dot com

name=binutils
version=2.35
release=1
source=(https://ftpmirror.gnu.org/gnu/$name/$name-$version.tar.xz)

build() {
	cd $name-$version

	mkdir build
	cd build

	../configure \
		--prefix=/usr \
		--build=aarch64-linux-gnu \
		--host=aarch64-linux-gnu \
		--target=aarch64-linux-gnu \
		--enable-shared \
		--enable-ld=default \
		--enable-gold=yes \
		--enable-plugins \
		--enable-64-bit-bfd \
		--enable-threads \
		--enable-install-libiberty \
		--enable-deterministic-archives \
		--enable-relro \
		--enable-lto \
		--disable-nls \
		--disable-werror \
		--disable-multilib \
		--disable-gdb \
		--with-pic \
		--with-mmap \
		--with-system-zlib \
		--with-pkgversion="SAUX Aarch64"

	make tooldir=/usr
	make tooldir=/usr DESTDIR=$PKG install

	# Create triplet symlinks
	for f in $PKG/usr/bin/*; do
		ln -s ${f##*/} $PKG/usr/bin/aarch64-linux-gnu-${f##*/}
	done

	rm -r $PKG/usr/share/info
	rm $PKG/usr/share/man/man1/{dlltool,windres,windmc}.1

	sed -i "s|-L$SRC[^ ]* ||g" $PKG/usr/lib/lib{bfd,ctf,ctf-nobfd,opcodes}.la 
}

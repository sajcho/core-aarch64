# Description:	POSIX.1e capabilities library
# URL:		http://sites.google.com/site/fullycapable/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	attr linux-pam

name=libcap
version=2.49
release=0
source=(https://www.kernel.org/pub/linux/libs/security/linux-privs/libcap2/${name}-${version}.tar.xz)

build() {
	cd ${name}-${version}

	sed -i "/^CFLAGS/s/-O2/$CFLAGS/" Make.Rules

	make prefix=/usr \
		lib=lib \
		DESTDIR=$PKG

	make -j1 test

	make prefix=/usr \
		lib=lib \
		RAISE_SETFCAP=no \
		DESTDIR=$PKG install

	# Fix perms
	chmod -v 0755 $PKG/usr/lib/libcap.so.${version}

	install -d $PKG/lib
	mv $PKG/usr/lib/security $PKG/lib
}

# Description:	CRUX ports system tools
# URL:		http://crux.nu
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com

name=ports
version=1.6
release=1

source=(http://crux.nu/files/tools/${name}/${name}-${version}.tar.gz \
	core-aarch64.httpup \
	opt-aarch64.httpup \
	xorg-aarch64.httpup)

build() {
	cd ${name}-${version}

	make

	make DESTDIR=$PKG MANDIR=/usr/share/man install

	install -m 0644 $SRC/core-aarch64.httpup $PKG/etc/ports
	install -m 0644 $SRC/opt-aarch64.httpup $PKG/etc/ports
	install -m 0644 $SRC/xorg-aarch64.httpup $PKG/etc/ports
}

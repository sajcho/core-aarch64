# Description:	CRUX ports system tools
# URL:		http://crux.nu
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com

name=ports
version=1.6
release=5

source=(http://crux.nu/files/tools/${name}/${name}-${version}.tar.gz \
	core-aarch64.httpup \
	opt-aarch64.httpup \
	xorg-aarch64.httpup \
	core-x86_64.httpup \
	opt-x86_64.httpup \
	xorg-x86_64.httpup)

build() {
	cd ${name}-${version}

	make

	make DESTDIR=$PKG MANDIR=/usr/share/man install

	cp $SRC/*.httpup $PKG/etc/ports/
}

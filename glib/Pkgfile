# Description:	Common C routines used by Gtk+ and other libs
# URL:		https://developer.gnome.org/glib/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	libpcre meson util-linux

name=glib
version=2.68.1
release=0
source=(https://download.gnome.org/sources/${name}/${version%.*}/${name}-${version}.tar.xz \
	0001-gquark-fix-initialization-with-c-constructors.patch \
	deprecated-no-warn.patch \
	gschemas.compiled)

build() {
	cd ${name}-${version}

	patch -p1 -i $SRC/0001-gquark-fix-initialization-with-c-constructors.patch
	patch -p1 -i $SRC/deprecated-no-warn.patch

	build-meson \
		. build

	meson compile ${JOBS:+-j ${JOBS}} -C build

	# fix : meson adds -lintl first in Libs: in the .pc file but it needs to be
	#       last for static builds (e.g. qemu)
	sed -i -e '/^Libs:/s/-lintl \(.*\)/\1 -lintl/' build/meson-private/glib-2.0.pc

	DESTDIR=$PKG meson install --no-rebuild -C build


	install -m 0644 $SRC/gschemas.compiled $PKG/usr/share/glib-2.0/schemas/gschemas.compiled

	rm -r $PKG/usr/share/locale
	rm -r $PKG/usr/share/bash-completion
}

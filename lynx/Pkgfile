# Description:	Text-based web browser.
# URL:		http://lynx.isc.org/
# Maintainer:	Danny Rawlins, crux at romster dot me
# Depends on:	ncurses openssl zlib
# Modified:	Milan Buska, milan dot buska at gmail dot com

name=lynx
version=2.9.0dev.5
release=1
source=(https://invisible-mirror.net/archives/lynx/tarballs/lynx2.9.0dev.5.tar.gz)

build() {
	cd lynx2.9.0dev.5

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-8bit-toupper \
		--enable-externs \
		--enable-nsl-fork \
		--enable-cgi-links \
		--enable-exec-links \
		--enable-exec-scripts \
		--enable-persistent-cookies \
		--enable-nls \
		--enable-gzip-help \
		--enable-prettysrc \
		--enable-source-cache \
		--enable-cjk \
		--enable-default-colors \
		--enable-nested-tables \
		--enable-japanese-utf8 \
		--enable-ipv6 \
		--enable-forms-options \
		--enable-justify-elts \
		--enable-partial \
		--enable-read-eta \
		--enable-scrollbar \
		--enable-progressbar \
		--enable-syslog \
		--disable-idna \
		--disable-nls \
		--with-zlib \
		--with-bzlib \
		--with-screen=ncursesw \
		--with-ssl \
		--without-included-gettext

	make
	make -j1 DESTDIR=$PKG install
}
